	width:"100%",
	height: "75dp",
	bottom: 0,
	backgroundColor: "#4F5458"
}

"#media_footer_prev":{
	
	color: "#01FF36",
	font: {
		fontSize: "20dp",
		 fontWeight: 'bold'
	},
	top: 25,
	left: 100
